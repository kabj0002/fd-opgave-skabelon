    margin: 1rem 0 1rem 0;
}
.team {
    display: grid;
    grid-template-columns:  1fr 1fr 1fr;
    align-items: center;
    gap: 30px;
    text-align: center;

}
img {
    border-radius: 20px;
}
.some {
    display: flex;
    justify-content: space-evenly;
}
}
.hero_section {
display: grid;
grid-column: full;
background-image: url("../src/imgs/7f605bfdf789dc3d9a8aca2013d44538.webp");
height: 500px;
background-position: end;
background-size: cover;

.hero_header {
    position: relative;
    top: 5rem;
    left: 5rem;
    margin-left: 8rem;
    margin-right: 18rem;
}

