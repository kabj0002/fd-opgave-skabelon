}
#our_vision {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
 min-height: 50svh;
  background: var(--secondary02);
  height: 500px;
  margin: 4rem 5rem 4rem 5rem;

  ul {
  display: grid;
  gap: 1rem;
  list-style: none;
  padding: 0;
}

li {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 1rem;
} 

li::before {
  content: '';
  width: 1.6rem;
  height: 1.4lh;
  background: var(--checkmark-icon) 50% 50% / 100% auto no-repeat;
  background-position: 50% 50%;
  background-size: 100% auto;
}
  figure {
  margin-inline: auto;
  max-inline-size: 400px;
  margin: 3rem;
  display: block;
  position: relative;

  &::before {
    content: "";
    background-color: green;
    width: 164px;
    height: 183px;
    transform: rotate(-90deg);
    flex-shrink: 0;
   
    display: block;
    position: absolute;
    top: 2rem;
    right: -7rem;
    z-index: 1;
    border-radius: 20px;
  }
  .vector2 {
    position: absolute;
    top: 1rem;
    right: -14rem;
    z-index: 0;
    width: 327.802px;
    height: 327.803px;
    flex-shrink: 0;
  }
  .rubix {
  inline-size: 100%;
  aspect-ratio: 16/9;
  object-fit: cover;
 
  z-index: 2;
  position: relative;
  top: 4.5rem;
  right: -5.5rem;
  border-radius: 20px;
}
}
.results {
    display: flex;
    grid-row: 2/3;
    grid-column: 1/3;
    justify-content: space-around;
    margin-top: 4rem;
}
}




