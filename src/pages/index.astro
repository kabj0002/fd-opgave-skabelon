.contact_us {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column: full;
  min-height: 50svh;
  margin: 3rem 0 0 8rem;
  
  .contact_info {
  grid-column: 1/2;
}
  .contact {
    display: flex;
    border-radius: 50%;
    padding: .5rem;
    justify-self: center;
    align-items: center;
    gap: 1rem;

    /* div {
    display: flex;  
    flex-direction: row;
} */
 img {
  content: '';
  border-radius: 50%;
  padding: .3rem;
 }
.phone {
      background-color:#FFECBB;
      color: #DEAA27;
      width: 50px;
      height: 50px;
      
     
    }
    .clock {
      background-color: #A4EDA4;
      color: #4EAF4E;
      width: 50px;
      height: 50px;
    }
    .pin {
      background-color: #EAEAEA;
