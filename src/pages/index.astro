<style>
:root {
  --checkmark-icon: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="%234EAF4E" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
}
.what_to_expect {
  display: grid;
  grid-template-columns: 1fr 1fr;
  /* grid-column: full; */
  background: var(--secondary02);
  min-height: 40svh;
  margin: 4rem 0 3rem 0;

  figure {
  margin-inline: auto;
  max-inline-size: 400px;
  margin: 3rem;
  display: block;
  position: relative;

  &::before {
    content: "";
    background-color: green;
    width: 164px;
    height: 183px;
    transform: rotate(-90deg);
    flex-shrink: 0;
   
    display: block;
    position: absolute;
    top: 2rem;
    right: 11rem;
    z-index: 1;
    border-radius: 20px;
  }
  .vector2 {
    position: absolute;
    top: 0rem;
    right: 5rem;
    z-index: 0;
    width: 327.802px;
    height: 327.803px;
    flex-shrink: 0;
  }
  .yellow_sweater {
  inline-size: 100%;
  aspect-ratio: 16/9;
  object-fit: cover;
 
  z-index: 2;
  position: relative;
  top: 4.5rem;
  right: -5.5rem;
  border-radius: 20px;
}
}
ul {
  display: grid;
  gap: 1rem;
  list-style: none;
  padding: 0;
}

li {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 1rem;
}

li::before {
  content: '';
  width: 1.6rem;
  height: 1.4lh;
  background: var(--checkmark-icon) 50% 50% / 100% auto no-repeat;
  background-position: 50% 50%;
  background-size: 100% auto;
}
}

