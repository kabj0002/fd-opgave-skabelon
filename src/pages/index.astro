}
  
  
    /*Styling bento*/
.bento_container {
  display: grid;
  grid-column: 2/3;
  container-type: inline-size;
  margin-inline: auto;
  max-inline-size: 400px;
  margin: 3rem;
  display: block;
  position: relative; 

  &::before {
    content: "";
    background-color: green;
    width: 164px;
    height: 183px;
    transform: rotate(-90deg);
    flex-shrink: 0;
   
    display: block;
    position: absolute;
    top: -3rem;
    right: -2rem;
    z-index: -1;
    border-radius: 20px;
  }
  .vector3 {
    position: absolute;
    top: 2rem;
    left: -3rem;
    z-index: -1;
    width: 327.802px;
    height: 327.803px;
    flex-shrink: 0;
}
}
.bento {
  display: grid;
  grid-template-rows: 1fr 1fr;
  grid-template-columns: 1fr 1fr;
  width: 100%;
  gap: 10px;
  z-index: 0;
  
  grid-template-areas:
    "pink_jacket comp_work"
    "pink_jacket convo";

    img {
      border-radius: 30px; 
    }
}
.bento > .pink_jacket {
  grid-area: pink_jacket;
}
.bento > .comp_work {
  grid-area: comp_work;
}
.bento > .convo {
  grid-area: convo;
}
}

</style>
